<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UIModule.Styles">

    <Style x:Key="HorizontalStackPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <Style x:Key="VerticalStackPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>

    <Style x:Key="RightHorizontalStackPanel" BasedOn="{StaticResource HorizontalStackPanel}" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <Style x:Key="RightVerticalStackPanel" BasedOn="{StaticResource VerticalStackPanel}" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <Style x:Key="LoginStackPanel" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="15"/>
    </Style>

</ResourceDictionary>
