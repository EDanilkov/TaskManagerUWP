<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UIModule.Styles">

    <Style x:Key="Rectangle" TargetType="Rectangle">
        <Setter Property="MinHeight" Value="280"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Fill" Value="{StaticResource brushRadSecurity}"/>
    </Style>

    <Style x:Key="CenterRectangle" TargetType="Rectangle">
        <Setter Property="Width" Value="280"/>
        <Setter Property="MinHeight" Value="250"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="0,80"/>
        <Setter Property="RadiusY" Value="10"/>
        <Setter Property="RadiusX" Value="10"/>
        <Setter Property="Fill" Value="White"/>
    </Style>

    <LinearGradientBrush 
            x:Key="brushRadSecurity"
            EndPoint="0.5,1" 
            StartPoint="0.5,0">
        <GradientStop Color="#5151f5"/>
        <GradientStop Color="#000054" Offset="1"/>
        <GradientStop Color="#000094" Offset="0.546"/>
    </LinearGradientBrush>

</ResourceDictionary>
