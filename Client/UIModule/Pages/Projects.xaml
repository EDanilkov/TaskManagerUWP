<Page
    x:Class="UIModule.Pages.Projects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UIModule.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:UIModule.ViewModels"
    
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core" 
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding Loaded}"/>
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Page.DataContext>
        <vm:ProjectsViewModel/>
    </Page.DataContext>

    <Grid
        Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="50"/>
            <ColumnDefinition 
                Width="*"/>
            <ColumnDefinition 
                Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition 
                MinHeight="60"/>
            <RowDefinition 
                MinHeight="80"
                Height="500*"/>
            <RowDefinition 
                Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Grid.Row="1"
            Grid.Column="1"
            Orientation="Vertical">
            <StackPanel
                Grid.Column="1"
                Grid.Row="1">
                <ScrollViewer 
                    VerticalScrollBarVisibility="Auto">
                    <ListBox 
                        BorderThickness="0"
                        MaxHeight="{Binding Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding ProjectsVisibility}"
                        HorizontalContentAlignment="Stretch"
                        ItemsSource="{Binding ListProjects}" 
                        SelectedValue="{Binding SelectedProject}">
                        <ControlTemplate>
                            <Border Background="{TemplateBinding Background}">
                                <Border Background="White" Margin="1">
                                    <ContentControl>

                                        <Grid>
                                            <StackPanel
                                            Orientation="Horizontal">
                                                <TextBlock
                                                Margin="10"
                                                Foreground="Black"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Text="{Binding ProjectName}"/>
                                            </StackPanel>
                                        </Grid>
                                    </ContentControl>
                                </Border>
                            </Border>
                        </ControlTemplate>
                    </ListBox>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

