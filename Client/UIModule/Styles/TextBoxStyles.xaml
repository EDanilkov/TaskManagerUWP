<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="LoginTextBox" TargetType="TextBox">
        <Setter Property="Margin" Value="0,10"/>
        <Setter Property="FontFamily" Value="Champagne &amp; Limousines"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="MaxLength" Value="50"/>
    </Style>

    <Style x:Key="PasswordTextBox" TargetType="PasswordBox">
        <Setter Property="Margin" Value="0,10"/>
        <Setter Property="FontFamily" Value="Champagne &amp; Limousines"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="MaxLength" Value="50"/>
    </Style>

    <Style x:Key="TextBoxNewElement" TargetType="TextBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MaxHeight" Value="100"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="Comment" TargetType="TextBox">
        <Setter Property="Margin" Value="13"/>
        <Setter Property="Width" Value="230"/>
        <Setter Property="MaxLength" Value="250"/>
    </Style>

</ResourceDictionary>
